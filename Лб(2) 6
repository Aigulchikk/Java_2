import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Введите чило: ");
        int a = scanner.nextInt();
        if (a % 2 == 0){
            System.out.print("Yes");
        }
        else {
            System.out.print("NO");
        }
    }
}
